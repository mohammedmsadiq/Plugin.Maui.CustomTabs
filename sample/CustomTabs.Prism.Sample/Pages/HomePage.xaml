<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="Automatic"
             x:Class="CustomTabs.Prism.Sample.Pages.HomePage"
             Title="Home">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Home"
               FontSize="28"
               FontAttributes="Bold" />
        <Label Text="Prism + CustomTabs sample." />
        <Button Text="Push details" Command="{Binding PushDetailsCommand}" />

        <Label Text="Select tab"
               FontAttributes="Bold" />
        <HorizontalStackLayout Spacing="12">
            <Button Text="Search" Command="{Binding SelectSearchTabCommand}" />
            <Button Text="Settings" Command="{Binding SelectSettingsTabCommand}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
