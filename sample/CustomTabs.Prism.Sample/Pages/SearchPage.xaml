<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="Automatic"
             x:Class="CustomTabs.Prism.Sample.Pages.SearchPage"
             Title="Search">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Search"
               FontSize="28"
               FontAttributes="Bold" />
        <Label Text="Each tab has its own Prism navigation stack." />
        <Button Text="Push details" Command="{Binding PushDetailsCommand}" />
    </VerticalStackLayout>
</ContentPage>
