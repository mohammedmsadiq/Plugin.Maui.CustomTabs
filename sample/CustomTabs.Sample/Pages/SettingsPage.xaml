<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomTabs.Sample.Pages.SettingsPage"
             Title="Settings">
    <VerticalStackLayout Padding="24" Spacing="16">
        <Label Text="Settings"
               FontSize="28"
               FontAttributes="Bold" />

        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
            <Label Text="Show text labels" VerticalOptions="Center" />
            <Switch Grid.Column="1" IsToggled="{Binding ShowText}" />
        </Grid>

        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
            <Label Text="Enable animations" VerticalOptions="Center" />
            <Switch Grid.Column="1" IsToggled="{Binding EnableAnimations}" />
        </Grid>

        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
            <Label Text="Show underline" VerticalOptions="Center" />
            <Switch Grid.Column="1" IsToggled="{Binding ShowUnderline}" />
        </Grid>

        <Label Text="Language" FontAttributes="Bold" />
        <HorizontalStackLayout Spacing="12">
            <Button Text="English" Clicked="OnEnglishClicked" />
            <Button Text="French" Clicked="OnFrenchClicked" />
        </HorizontalStackLayout>
        <Label x:Name="LanguageLabel" />

        <Button Text="Push details" Clicked="OnPushDetailsClicked" />
    </VerticalStackLayout>
</ContentPage>
