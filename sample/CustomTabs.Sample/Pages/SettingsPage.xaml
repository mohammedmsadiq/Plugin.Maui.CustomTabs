<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="Automatic"
             x:Class="CustomTabs.Sample.Pages.SettingsPage"
             Title="Settings"
             BackgroundColor="#1F2937">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">
            <Label Text="Settings"
                   TextColor="#F9FAFB"
                   FontSize="28"
                   FontAttributes="Bold" />

            <Label Text="Behavior"
                   TextColor="#F9FAFB"
                   FontAttributes="Bold" />
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                <Label Text="Show text labels"
                       TextColor="#F9FAFB"
                       VerticalOptions="Center" />
                <Switch Grid.Column="1" IsToggled="{Binding Options.ShowText}" />
            </Grid>
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                <Label Text="Enable animations"
                       TextColor="#F9FAFB"
                       VerticalOptions="Center" />
                <Switch Grid.Column="1" IsToggled="{Binding Options.EnableAnimations}" />
            </Grid>
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                <Label Text="Show underline"
                       TextColor="#F9FAFB"
                       VerticalOptions="Center" />
                <Switch Grid.Column="1" IsToggled="{Binding Options.ShowUnderline}" />
            </Grid>
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                <Label Text="Enable haptics"
                       TextColor="#F9FAFB"
                       VerticalOptions="Center" />
                <Switch Grid.Column="1" IsToggled="{Binding Options.EnableHaptics}" />
            </Grid>
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                <Label Text="Respect safe area"
                       TextColor="#F9FAFB"
                       VerticalOptions="Center" />
                <Switch Grid.Column="1" IsToggled="{Binding Options.RespectSafeArea}" />
            </Grid>
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                <Label Text="Keyboard navigation"
                       TextColor="#F9FAFB"
                       VerticalOptions="Center" />
                <Switch Grid.Column="1" IsToggled="{Binding Options.EnableKeyboardNavigation}" />
            </Grid>

            <Label Text="Style"
                   TextColor="#F9FAFB"
                   FontAttributes="Bold" />
            <Picker TextColor="#F9FAFB"
                    BackgroundColor="#374151"
                    ItemsSource="{Binding StyleOptions}"
                    ItemDisplayBinding="{Binding Label}"
                    SelectedItem="{Binding SelectedStyle}" />
            <Picker TextColor="#F9FAFB"
                    BackgroundColor="#374151"
                    ItemsSource="{Binding LayoutModes}"
                    ItemDisplayBinding="{Binding Label}"
                    SelectedItem="{Binding SelectedLayoutMode}" />
            <Picker TextColor="#F9FAFB"
                    BackgroundColor="#374151"
                    ItemsSource="{Binding ReselectBehaviors}"
                    ItemDisplayBinding="{Binding Label}"
                    SelectedItem="{Binding SelectedReselectBehavior}" />

            <Label Text="{Binding IconSizeLabel}" TextColor="#F9FAFB" />
            <Slider Minimum="16"
                    Maximum="36"
                    Value="{Binding Options.IconSize, Mode=TwoWay}" />

            <Label Text="{Binding TextSizeLabel}" TextColor="#F9FAFB" />
            <Slider Minimum="10"
                    Maximum="18"
                    Value="{Binding Options.TextSize, Mode=TwoWay}" />

            <Label Text="{Binding TabBarHeightLabel}" TextColor="#F9FAFB" />
            <Slider Minimum="56"
                    Maximum="110"
                    Value="{Binding Options.TabBarHeight, Mode=TwoWay}" />

            <Label Text="{Binding BorderThicknessLabel}" TextColor="#F9FAFB" />
            <Slider Minimum="0"
                    Maximum="4"
                    Value="{Binding Options.BorderThickness, Mode=TwoWay}" />

            <Label Text="{Binding CornerRadiusLabel}" TextColor="#F9FAFB" />
            <Slider Minimum="0"
                    Maximum="28"
                    Value="{Binding CornerRadiusValue, Mode=TwoWay}" />

            <Label Text="{Binding ScrollableThresholdLabel}" TextColor="#F9FAFB" />
            <Stepper Minimum="3"
                     Maximum="8"
                     Increment="1"
                     Value="{Binding ScrollableThresholdValue, Mode=TwoWay}" />

            <Label Text="Theme Presets"
                   TextColor="#F9FAFB"
                   FontAttributes="Bold" />
            <HorizontalStackLayout Spacing="12">
                <Button Text="Neutral"
                        Command="{Binding ApplyNeutralThemeCommand}" />
                <Button Text="Slate"
                        Command="{Binding ApplySlateThemeCommand}" />
                <Button Text="Muted"
                        Command="{Binding ApplyMutedThemeCommand}" />
            </HorizontalStackLayout>

            <Label Text="Language"
                   TextColor="#F9FAFB"
                   FontAttributes="Bold" />
            <HorizontalStackLayout Spacing="12">
                <Button Text="English" Command="{Binding SetEnglishCommand}" />
                <Button Text="French" Command="{Binding SetFrenchCommand}" />
            </HorizontalStackLayout>
            <Label Text="{Binding CurrentLanguageLabel}"
                   TextColor="#F9FAFB" />

            <Button Text="Push details" Command="{Binding PushDetailsCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
