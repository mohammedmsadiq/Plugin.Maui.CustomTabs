<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="Automatic"
             x:Class="CustomTabs.Sample.Pages.SplashPage"
             Title="Loading">
    <Grid>
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="12">
            <Label Text="CustomTabs" FontSize="28" FontAttributes="Bold" />
            <Label Text="Loading..." />
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   FontSize="12"
                   HorizontalTextAlignment="Center" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
