<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="CustomTabs.Sample.Pages.LoginPage"
             Title="Login">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Login" FontSize="28" FontAttributes="Bold" />
        <Label Text="Tap to simulate a successful login." />
        <Button Text="Sign in" Command="{Binding SignInCommand}" />
    </VerticalStackLayout>
</ContentPage>
