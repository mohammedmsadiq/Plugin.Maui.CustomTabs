<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="Automatic"
             x:Class="CustomTabs.Sample.Pages.HomePage"
             Title="Home">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Home"
               AutomationId="home-title"
               FontSize="28"
               FontAttributes="Bold" />
        <Label Text="Welcome to the custom tabs demo." />
        <Button Text="Push details"
                AutomationId="home-push-details"
                Command="{Binding PushDetailsCommand}" />

        <Label Text="Navigation demo"
               FontAttributes="Bold" />
        <HorizontalStackLayout Spacing="12">
            <Button Text="Search tab" Command="{Binding SelectSearchTabCommand}" />
            <Button Text="Messages tab" Command="{Binding SelectMessagesTabCommand}" />
            <Button Text="Settings tab" Command="{Binding SelectSettingsTabCommand}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
