<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="Automatic"
             x:Class="CustomTabs.Sample.Pages.MessagesPage"
             Title="Messages"
             BackgroundColor="#1F2937">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Messages"
               TextColor="#F9FAFB"
               FontSize="28"
               FontAttributes="Bold" />
        <Label Text="Badge count:"
               TextColor="#F9FAFB" />
        <Label Text="{Binding Badge.Count}"
               TextColor="#F9FAFB"
               FontSize="20"
               FontAttributes="Bold" />
        <HorizontalStackLayout Spacing="12">
            <Button Text="Increment"
                    Command="{Binding IncrementCommand}" />
            <Button Text="Decrement"
                    Command="{Binding DecrementCommand}" />
        </HorizontalStackLayout>
        <Button Text="Push details"
                Command="{Binding PushDetailsCommand}" />
    </VerticalStackLayout>
</ContentPage>
