<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{StaticResource Surface}" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource LightText}" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="BackgroundColor" Value="{StaticResource AccentNeutral}" />
        <Setter Property="TextColor" Value="{StaticResource Surface}" />
    </Style>
</ResourceDictionary>
